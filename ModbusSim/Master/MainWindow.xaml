<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="469" Width="824">

    <Window.Resources>
        <Style TargetType="DataGridRow" x:Name="BaseStyle">
            <EventSetter Event="MouseDoubleClick" Handler="DataGrid_MouseDoubleClick" />
        </Style>
    </Window.Resources>

    <Grid Height="450" VerticalAlignment="Top" Margin="0,0,-17,0" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Devices}" SelectionMode="Single" CanUserDeleteRows="False" CanUserResizeRows="False"
                  SelectionUnit="FullRow" AutoGenerateColumns="False" Name="dgDevices">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Unit ID" Binding="{Binding UnitId}" IsReadOnly="True" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
