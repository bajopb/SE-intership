<Window x:Class="Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master"
        mc:Ignorable="d"
        Title="MainWindow" Height="469" Width="824">
    <Grid Height="450" VerticalAlignment="Top" Margin="0,0,-17,0" Background="Gray">
        <Button x:Name="btnConnect" Command="{Binding ConnectCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" Content="Connect" HorizontalAlignment="Center" Margin="0,386,0,0" VerticalAlignment="Top" Width="172" Height="36"/>
        <Button Content="Device 1" Command="{Binding ShowDevice}" HorizontalAlignment="Left" Margin="20,21,0,0" VerticalAlignment="Top" Height="96" Width="92"/>

    </Grid>
</Window>
